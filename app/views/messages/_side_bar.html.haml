.side_bar
  .side-header
    .side-header__box 
      %p.side-header__box__user-name
        = current_user.name
      %u.side-header__box__menu
        %li.side-header__box__new-group
          = link_to "#" do
            = icon('fas', 'edit')
        %li.side-header__box__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    = link_to "#", class:"group" do
      %p.group__group-name
        test
      %p.group__latest-message
        testtest